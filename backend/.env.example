# Environment Configuration Template
# Copy this file to .env in your backend root directory
# Update with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dfashion
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Gmail Configuration (recommended for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@dfashion.com

# Alternative: SendGrid Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@dfashion.com

# Alternative: AWS SES Configuration
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY=your-access-key
# AWS_SES_SECRET_KEY=your-secret-key
# AWS_SES_FROM_EMAIL=noreply@dfashion.com

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:4200
FRONTEND_DOMAIN=localhost

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Password reset token expiry (in hours)
PASSWORD_RESET_EXPIRY=24

# Login attempt limits
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15 # minutes

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# AWS S3 CONFIGURATION (for file uploads)
# ============================================
# AWS_S3_BUCKET=dfashion-bucket
# AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY=your-access-key
# AWS_S3_SECRET_KEY=your-secret-key

# ============================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLIC_KEY=your-stripe-public-key
# STRIPE_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# REDIS CONFIGURATION (for caching/sessions)
# ============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# MONITORING & ANALYTICS
# ============================================
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_EMAIL_VERIFICATION=true

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Set these only in production
# PRODUCTION_MODE=true
# HTTPS_ONLY=true
# HSTS_MAX_AGE=31536000
